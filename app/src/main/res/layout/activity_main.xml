<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="74dp">

        <ImageView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="-210dp"
            app:srcCompat="@drawable/lateral_image_home" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="323dp"
            android:layout_marginEnd="113dp"
            app:srcCompat="@drawable/logopagini" />

        <Button
            android:id="@+id/logininitial"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="526dp"
            android:background="#ff696a"
            android:backgroundTint="@color/darkpink"
            android:text="Login"
            app:rippleColor="@color/darkpink" />

        <Button
            android:id="@+id/signupinitial"
            android:layout_width="338dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="630dp"
            android:background="#ffb6d3"
            android:backgroundTint="#FFB6D3"
            android:text="Sign Up"
            app:rippleColor="@color/darkpink" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>